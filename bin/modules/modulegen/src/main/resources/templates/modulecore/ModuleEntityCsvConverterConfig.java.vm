package ${modulegroup}.${moduleartifact}core.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import com.beanframework.common.converter.ConverterMapping;
import ${modulegroup}.${moduleartifact}core.converter.entity.csv.${Moduleartifact}CsvEntityConverter;
import ${modulegroup}.${moduleartifact}core.csv.${Moduleartifact}Csv;

@Configuration
public class ${Moduleartifact}EntityCsvConverterConfig {

	@Bean
	public ${Moduleartifact}CsvEntityConverter entityCsv${Moduleartifact}Converter() {
		return new ${Moduleartifact}CsvEntityConverter();
	}

	@Bean
	public ConverterMapping entityCsv${Moduleartifact}ConverterMapping() {
		ConverterMapping mapping = new ConverterMapping();
		mapping.setConverter(entityCsv${Moduleartifact}Converter());
		mapping.setTypeCode(${Moduleartifact}Csv.class.getSimpleName());

		return mapping;
	}
}
