<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	
	<property name="LOG_FOLDER" value="../log" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>
	
	<appender name="FILE-ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_FOLDER}/all.log</file>

		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
	      <fileNamePattern>${LOG_FOLDER}/archive/all-%i.log.zip</fileNamePattern>
          <minIndex>0</minIndex>
	      <maxIndex>6</maxIndex>
	    </rollingPolicy>
		
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      		<maxFileSize>10MB</maxFileSize>
    	</triggeringPolicy>
    	
    	<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</encoder>

	</appender>
	
	<appender name="FILE-DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_FOLDER}/debug.log</file>

		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
	      <fileNamePattern>${LOG_FOLDER}/archive/debug-%i.log.zip</fileNamePattern>
          <minIndex>0</minIndex>
	      <maxIndex>6</maxIndex>
	    </rollingPolicy>
		
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      		<maxFileSize>10MB</maxFileSize>
    	</triggeringPolicy>
    	
    	<filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    	
    	<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</encoder>

	</appender>
	
	<appender name="FILE-INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_FOLDER}/info.log</file>

		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
	      <fileNamePattern>${LOG_FOLDER}/archive/info-%i.log.zip</fileNamePattern>
          <minIndex>0</minIndex>
	      <maxIndex>6</maxIndex>
	    </rollingPolicy>
		
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      		<maxFileSize>10MB</maxFileSize>
    	</triggeringPolicy>
    	
    	<filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    	
    	<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</Pattern>
		</encoder>

	</appender>
	
	<appender name="FILE-WARN" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_FOLDER}/warn.log</file>

		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
	      <fileNamePattern>${LOG_FOLDER}/archive/warn-%i.log.zip</fileNamePattern>
          <minIndex>0</minIndex>
	      <maxIndex>6</maxIndex>
	    </rollingPolicy>
		
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      		<maxFileSize>10MB</maxFileSize>
    	</triggeringPolicy>
    	
    	<filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
